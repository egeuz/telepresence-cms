{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "Project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "id": {
      "type": "integer",
      "required": true,
      "unique": true,
      "min": 0
    },
    "title": {
      "type": "string",
      "required": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "hashtags": {
      "type": "string",
      "required": true
    },
    "cover_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "project_description": {
      "type": "text"
    },
    "author_intro": {
      "type": "text"
    },
    "author_social": {
      "type": "dynamiczone",
      "components": [
        "text.instagram",
        "text.facebook",
        "text.linked-in",
        "text.portfolio",
        "text.emailid"
      ]
    },
    "project_detailed_description": {
      "type": "text"
    },
    "tagline": {
      "type": "string"
    },
    "content_images": {
      "type": "dynamiczone",
      "components": [
        "photo.single-wide-image",
        "photo.single-tall-image",
        "photo.two-image-grid",
        "photo.three-image-grid"
      ]
    },
    "content_video": {
      "type": "dynamiczone",
      "components": [
        "video.video"
      ]
    },
    "content_unity": {
      "type": "dynamiczone",
      "components": [
        "unity.unity"
      ]
    },
    "content_textbox": {
      "type": "dynamiczone",
      "components": [
        "text.textbox-content"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Activism_by_Design",
        "The_New_Gooey",
        "Defragmented_Identities",
        "Spiritual_Technologies",
        "Neophysical_Connections",
        "Cybernetics_of_Culture",
        "Uncoded_Territories"
      ]
    }
  }
}
