{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "Project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "project_id": {
      "type": "integer",
      "required": true,
      "unique": true,
      "min": 0
    },
    "project_title": {
      "type": "string",
      "required": true
    },
    "project_author": {
      "type": "string",
      "required": true
    },
    "project_hashtags": {
      "type": "string",
      "required": true
    },
    "project_category": {
      "type": "string",
      "required": true
    },
    "project_cover_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "project_description": {
      "type": "text"
    },
    "Author_Intro": {
      "type": "text"
    },
    "Author_Social": {
      "type": "dynamiczone",
      "components": [
        "text.instagram",
        "text.facebook",
        "text.linked-in",
        "text.portfolio",
        "text.emailid"
      ]
    },
    "Project_DetailDescription": {
      "type": "text"
    },
    "Project_tagline": {
      "type": "string"
    },
    "Content_Images": {
      "type": "dynamiczone",
      "components": [
        "photo.single-wide-image",
        "photo.single-tall-image",
        "photo.two-image-grid",
        "photo.three-image-grid"
      ]
    }
  }
}
